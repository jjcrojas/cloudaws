<p id="notice"><%= notice %></p>

<p>
  <strong>Código de la competición:</strong>
  <%= @competitor.id %>
</p>

<p>
  <strong>Nombre Participante:</strong>
  <%= @competitor.first_name %> <%= @competitor.second_name %> <%= @competitor.last_name %> <%= @competitor.second_last_name %>
</p>

<p>
  <strong>Fecha Ingreso:</strong>
  <%= @competitor.date_admission %>
</p>

<p>
  <strong>Correo Electronico:</strong>
  <%= @competitor.email %>
</p>

<p>
  <strong>Mensaje:</strong>
  <%= @competitor.message %>
</p>

<p>
  <strong>Estado del Video:</strong>
  <%= @competitor.status_video %>
</p>

<strong>Video Original:</strong>
</p>
<div id="myElement">Loading the player...</div>
<script type="text/javascript">
    var playerInstance = jwplayer("myElement");
    playerInstance.setup({
        file: "<%= @competitor.video_original.url() %>",
        width: 640,
        height: 360,
        title: 'Basic Video Embed',
        description: 'A video with a basic title and description!'
    });
</script>

</p>

<% if @competitor.status_video == 'En Proceso' %>
  <strong>El video esta siendo procesado!.</strong>

<% else %>
  <strong>Video:</strong></p>
    <div id="myElement1">Loading the player...</div>
    <script type="text/javascript">
        var playerInstance = jwplayer("myElement1");
        playerInstance.setup({
            file: "<%= @competitor.video_converted.url() %>",
            width: 640,
            height: 360,
            title: 'Basic Video Embed',
            description: 'A video with a basic title and description!'
        });
    </script>
</p>
<% end %>
</p>



<br>


<%= link_to 'Atras', competition_url(@competitor.competitions_id) %>
